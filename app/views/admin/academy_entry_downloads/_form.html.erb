<%= form_for([:admin, @academy_entry_download]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>

    <div class="field">
      <%= f.label :forename %><br />
      <%= f.text_field :forename, readonly: true %>
    </div>

    <div class="field">
      <%= f.label :surname %><br />
      <%= f.text_field :surname, readonly: true %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email, readonly: true %>
    </div>

    <div class="field">
      <%= f.label :company %><br />
      <%= f.text_field :company, readonly: true %>
    </div>

  <% end -%>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
