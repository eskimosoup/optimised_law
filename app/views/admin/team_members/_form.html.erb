<%= form_for([:admin, @team_member]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :sector %><br />
      <%= f.select :sector, options_for_select([ "Attract", "Engage", "Convert" ], selected: @team_member.sector) %>
    </div>

    <div class="field">
      <%= f.label :image %><br />
      <% if @team_member.image? %>
        <%= image_tag(@team_member.image.thumb) %><br/>
      <% end %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
      <%= f.text_field :remote_image_url %>
    </div>

    <div class="field">
      <%= f.label :tag_line %><br />
      <%= f.text_field :tag_line %>
    </div>

    <div class="field">
      <%= f.label :profile %><br />
      <%= f.text_area :profile, class: 'tinymce' %>
    </div>

    <div class="field">
      <%= f.label :display %><br />
      <%= f.check_box :display, checked: true %>
    </div>

    <div class="field">
      <%= f.label :job_title %><br />
      <%= f.text_field :job_title %>
    </div>

    <div class="field">
      <%= f.label :director %><br />
      <%= f.check_box :director %>
    </div>

  <% end -%>

  <%= field_set_tag 'Social' do -%>

    <div class="field">
      <%= f.label :google_plus %><br />
      <%= f.text_field :google_plus %>
    </div>

    <div class="field">
      <%= f.label :twitter %><br />
      <%= f.text_field :twitter %>
    </div>

  <% end -%>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
