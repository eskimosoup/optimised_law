<%= form_for([:admin, @academy_entry]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.image_field :image %>
    </div>

    <div class="field">
      <%= f.label :level %><br />
      <%= f.select :level, AcademyEntry::LEVELS %>
    </div>

    <div class="field">
      <%= f.document_field :pdf_download %>
    </div>

    <div class="field">
      <%= f.label :summary %><br />
      <%= f.text_area :summary, class: 'tinymce' %>
    </div>

    <div class="field">
      <%= f.label :email_content %><br />
      <%= f.text_area :email_content, class: 'tinymce' %>
    </div>


    <div class="field">
      <%= f.label :display %><br />
      <%= f.check_box :display %>
    </div>
    <% end -%>

    <p class="admin_note">An Academy Entry without Mailchimp details is a resource.</p>

  <%= field_set_tag 'Mailchimp details' do %>
    <div class="field">
      <%= f.label :mailchimp_form %><br />
      <%= f.select :mailchimp_form, MailchimpSubscription.lists.map{|x| [x['name'], x['id']] }, prompt: 'Select Mailchimp list', include_blank: 'No Mailchimp list' %>
    </div>

    <div class="field">
      <%= f.label :mailchimp_frequency %><br />
      <%= f.text_field :mailchimp_frequency %>
    </div>
  <% end %>


  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
