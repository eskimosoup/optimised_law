<%= form_for([:admin, @article]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :date %><br />
      <%= f.text_field :date, class: 'datepicker' %>
    </div>

    <div class="field">
      <%= f.label :approach %><br />
      <%= f.select :approach, options_for_select(Article.approaches, selected: f.object.approach) %>
    </div>

    <div class="field">
      <%= f.label :summary %><br />
      <%= f.text_area :summary, class: 'tinymce' %>
    </div>

    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, class: 'tinymce' %>
    </div>

    <div class="field">
      <%= f.label :video %><br />
      <%= f.text_area :video %>
    </div>

    <div class="field">
      <%= f.label :image %><br />
      <% if @article.image? %>
        <%= image_tag(@article.image.thumb) %><br/>
      <% end %>
      <%= f.file_field :image %>
      <%= f.hidden_field :image_cache %>
      <%= f.text_field :remote_image_url %>
    </div>

    <div class="field">
      <%= f.label :infographic %><br />
      <%= f.document_field :infographic %>
    </div>

    <div class="field">
      <%= f.label :guide %><br />
      <%= f.document_field :guide %>
    </div>

    <div class="field">
      <%= f.label :team_member_id %><br />
      <%= f.select :team_member_id, TeamMember.current.map{|x| [x.name, x.id]} %>
    </div>

    <div class="field">
      <%= f.label :academy_content %><br />
      <%= f.check_box :academy_content %>
    </div>

    <div class="field">
      <%= f.label :news_content %><br />
      <%= f.check_box :news_content %>
    </div>

    <div class="field">
      <%= f.label :duplicate_content %><br />
      <%= f.check_box :duplicate_content %>
    </div>

  <% end -%>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
